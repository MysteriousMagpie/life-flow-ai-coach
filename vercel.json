
{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "VITE_SUPABASE_URL": "@supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@supabase_anon_key"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "server.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
